{
  "compilerOptions": {
    "lib": ["dom", "es2020"],
    "noEmit": true,
    "target": "es2020",
    "types": ["vite/client", "node", "cypress"],
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "declaration": true,
    "allowJs": true,
    "jsx": "react"
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
